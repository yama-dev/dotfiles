  "suggest.snippetIndicator": " -->> ",
  "suggest.enablePreview": true,

  "phpls.enable": true,
  "phpls.path": "~/.nodebrew/current/bin/intelephense",
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.stubs": [
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "com_dotnet",
    "Core",
    "ctype",
    "curl",
    "date",
    "dba",
