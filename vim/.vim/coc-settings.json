    "enchant",
    "exif",
    "fileinfo",
    "filter",
    "fpm",
    "ftp",
    "gd",
    "hash",
    "iconv",
    "imap",
    "interbase",
    "intl",
    "json",
    "ldap",
    "libxml",
    "mbstring",
    "mcrypt",
    "meta",
    "mssql",
    "mysqli",
    "oci8",
    "odbc",
    "openssl",
    "pcntl",
    "pcre",
    "PDO",
    "pdo_ibm",
    "pdo_mysql",
    "pdo_pgsql",
    "pdo_sqlite",
    "pgsql",
    "Phar",
    "posix",
    "pspell",
    "readline",
    "recode",
    "Reflection",
    "regex",
    "session",
    "shmop",
    "SimpleXML",
    "snmp",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "sqlite3",
    "standard",
    "superglobals",
    "sybase",
    "sysvmsg",
    "sysvsem",
    "sysvshm",
    "tidy",
    "tokenizer",
    "wddx",
    "wordpress",
    "xml",
    "xmlreader",
    "xmlrpc",
    "xmlwriter",
    "Zend OPcache",
    "zip",
    "zlib"
  ],

  "html.filetypes": [
    "html",
    "htm",
    "handlebars",
    "blade",
    "ejs",
    "html.ejs",
    "twig",
    "php"
  ],

  "htmlhint.documentSelector": [
    "html",
    "htm",
    "handlebars",
    "blade",
    "ejs",
    "html.ejs",
    "twig",
    "php"
  ],

  "css.lint.universalSelector": "warning",
  "css.lint.duplicateProperties": "warning",
  "scss.lint.universalSelector": "warning",
  "scss.lint.duplicateProperties": "warning",

  "eslint.packageManager": "npm",
  "eslint.autoFixOnSave": false,

  "list.source.grep.command": "rg",

  "prettier.printWidth": 120,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.bracketSpacing": true,
  "prettier.jsxBracketSameLine": false,
  "prettier.parser": "none",
  "prettier.semi": true,
  "prettier.useTabs": false,
  "prettier.proseWrap": "preserve",
  "prettier.arrowParens": "avoid",

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    }
  },

  "markdownlint.config": {
    "no-trailing-spaces": {
      "br_spaces": 2
    },
    "no-multiple-blanks": {
      "maximum": 3
    },
    "no-bare-urls": false,
    "line-length": {
      "line_length": 300
    },
    "no-emphasis-as-heading": false
  },
  "snippets.priority": 100,
  "snippets.userSnippetsDirectory": "~/vimfiles/snippets",
  "snippets.extends": {
    "css": ["scss"],
    "scss": ["css"],
    "php": ["php", "wordpress", "html"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "yank.priority": 0,

  "emmet.variables": {
    "lang": "ja"
  },

  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true
}
