{
  "suggest": {
    "snippetIndicator": "->"
  },
  "css": {
    "filetypes": [
      "css",
      "less",
      "scss",
      "sass"
    ]
  },
  "tsserver": {
    "enableJavascript": true
  },
  "tslint": {
    "jsEnable": true
  },
  "eslint": {
    "packageManager": "npm",
    "autoFixOnSave": false,
    "filetypes": [
      "javascript",
      "typescript",
      "typescriptreact",
      "javascriptreact",
      "typescript.tsx"
    ]
  },
  "list": {
    "maxHeight": 30
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": true,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    }
  },
  "markdownlint.config": {
    "no-trailing-spaces": {
      "br_spaces": 2
    },
    "no-multiple-blanks": {
      "maximum": 3
    },
    "no-bare-urls": false,
    "line-length": {
      "line_length": 300
    },
    "no-emphasis-as-heading": false
  }
}
