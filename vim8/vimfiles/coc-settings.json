{
  "suggest": {
    "snippetIndicator": "->"
  },
  "css": {
    "filetypes": [
      "css",
      "less",
      "scss",
      "sass"
    ]
  },
  "tsserver": {
    "enableJavascript": true
  },
  "eslint": {
    "filetypes": [
      "javascript",
      "typescript", 
      "typescriptreact", 
      "javascriptreact", 
      "typescript.tsx"
    ]
  },
  "list": {
    "maxHeight": 20
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2, 
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": true,
    "useTabs": false,
    "arrowParens": "avoid"
  }
}
